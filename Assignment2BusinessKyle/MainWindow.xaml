<Window x:Class="Assignment2BusinessKyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment2BusinessKyle"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Left Event Section -->
        <Border Grid.Column="0" Background="LightGray">
            <StackPanel Margin="10">
                <TextBlock Text="Day-by-Day Grid and Events" FontWeight="Bold" FontSize="16" Margin="0 0 0 10" />

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Day labels -->
                    <ListBox Grid.Row="0" ItemsSource="{Binding DaysOfWeek}" BorderThickness="0" Background="LightGray">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" HorizontalAlignment="Center" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>

                    <!-- Event section (you can customize this based on your requirements) -->
                    <ListBox Grid.Row="1" BorderThickness="0" Background="LightGray">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding EventName}" Margin="10" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Right Concession Viewer -->
        <Border Grid.Column="1" Background="LightBlue">
            <StackPanel Margin="10">
                <TextBlock Text="Concession Viewer" FontWeight="Bold" FontSize="20" Margin="0 0 0 10" TextAlignment="Center" />

                <!-- Grid of boxes to represent available Zumba classes -->
                <UniformGrid Rows="3" Columns="5" Width="350" Height="200" HorizontalAlignment="Center">
                    <!-- Labels for the top row -->
                    <TextBlock Text="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="4" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" />

                    <!-- Empty boxes for classes -->
                    <Border BorderBrush="Black" BorderThickness="1" Background="Green" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="Green" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="White" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="White" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="Green" />

                    <!-- Labels for the bottom row -->
                    <TextBlock Text="6" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="7" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="8" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="9" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBlock Text="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" />

                    <Border BorderBrush="Black" BorderThickness="1" Background="Green" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="Green" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="White" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="White" />
                    <Border BorderBrush="Black" BorderThickness="1" Background="Green" />
                </UniformGrid>

                <!-- You can add more relevant information or UI elements here -->
            </StackPanel>
        </Border>
    </Grid>
</Window>
